@model Hotel.PL.Models.BenefitModel

@{
    ViewData["Title"] = "BenefitDateInput";
}

<h1>Benefit for period of time</h1>

<h4>Enter startpoint and endpoint to benefit</h4>
<hr />
<div class="row">
    <div class="col-md-4 u-container-layout u-valign-middle u-container-layout-1" >
        <form asp-area="Admin" asp-action="BenefitPeriodCalc" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartPeriod" class="control-label"></label>
                <input asp-for="StartPeriod" class="form-control" />
                <span asp-validation-for="StartPeriod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndPeriod" class="control-label"></label>
                <input asp-for="EndPeriod" class="form-control" />
                <span asp-validation-for="EndPeriod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


