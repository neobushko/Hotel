@model IEnumerable<Hotel.PL.Models.RoomModel>

@{
    ViewData["Title"] = "FreeRoomsNow";
}

<h1>FreeRoomsNow</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a asp-controller="Room" asp-action="Details" value="@item" class="primary-btn">Details |</a>
                    <form class="buttonn-form mb-3" asp-controller="RoomBooking" asp-action="DoRecordRoom" method="get">
                        <input type="hidden" value="" />
                        <button name="id" value=@item.id.ToString() type="submit">Book this Room</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<form method="get" asp-area="" asp-controller="Room" asp-action="AllRooms">
    <button class="btn-primary" type="submit">Back to Rooms list</button>
</form>